{
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "首页"
			}
		},
		{
			"path": "pages/menu/menu",
			"style": {
				"navigationBarTitleText": "菜单",
				"enablePullDownRefresh": false,
				"app-plus":{
					// 将回弹属性关掉
					"bounce":"none"
				}
			}

		}, {
			"path": "pages/category/category",
			"style": {
				"navigationBarTitleText": "分类",
				"enablePullDownRefresh": false,
				"app-plus":{
					// 将回弹属性关掉
					"bounce":"none"
				}
			}

		}, {
			"path": "pages/profile/profile",
			"style": {
				"navigationBarTitleText": "我的",
				"enablePullDownRefresh": true
			}

		}
		,{
            "path" : "pages/goods-list/goods-list",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "goods-list",
                "enablePullDownRefresh": false
							
            }
            
        }
        ,{
            "path" : "pages/detail/detail",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "",
                "enablePullDownRefresh": false,
									"navigationStyle":"custom"//"navigationStyle":"custom"时头部导航栏消失
            }
            
        }
        ,{
            "path" : "pages/test/test",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "",
                "enablePullDownRefresh": false
            }
            
        }
    ],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"

	},
	"easycom": {
		"^u-(.*)": "@/uview-ui/components/u-$1/u-$1.vue"
	},
	"tabBar": {
		"color": "#7A7E83",
		"selectedColor": "#515151",
		"borderStyle": "black",
		"backgroundColor": "#ffffff",
		"list": [{
				"pagePath": "pages/index/index",
				"iconPath": "static/image/home.png",
				"selectedIconPath": "static/image/homes.png",
				"text": "首页"
			},
			{
				"pagePath": "pages/menu/menu",
				"iconPath": "static/image/menu.png",
				"selectedIconPath": "static/image/menus.png",
				"text": "菜单"
			},
			{
				"pagePath": "pages/category/category",
				"iconPath": "static/image/menu.png",
				"selectedIconPath": "static/image/menus.png",
				"text": "商品分类"
			},
			{
				"pagePath": "pages/profile/profile",
				"iconPath": "static/image/menu.png",
				"selectedIconPath": "static/image/menus.png",
				"text": "我的"
			}
		]
	}

}
